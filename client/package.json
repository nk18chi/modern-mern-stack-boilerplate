{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:4000",
  "scripts": {
    "dev": "next dev",
    "dev:test": "APP_ENV=test next dev",
    "build": "next build",
    "start": "next start",
    "build-and-start": "next build && next start",
    "lint": "eslint --cache --fix --max-warnings=0",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "test": "jest --maxWorkers=1",
    "test:watch": "jest --watchAll --maxWorkers=1",
    "storybook": "start-storybook -s ./public -p 6006",
    "dev-and-storybook": "next dev & start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook -s ./public",
    "download-schema": "apollo service:download --endpoint=http://localhost:4000/graphql graphql-schema.json",
    "codegen": "yarn run download-schema && apollo codegen:generate --localSchemaFile=graphql-schema.json --target=typescript --includes=gql/\\*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test && npm run cypress:headless"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.4.13",
    "@emotion/react": "^11.4.1",
    "cypress": "^12.9.0",
    "graphql": "^16.6.0",
    "next": "^13.3.0",
    "node-fetch": "^3.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@storybook/addon-actions": "^7.0.5",
    "@storybook/addon-essentials": "^7.0.5",
    "@storybook/addon-links": "^7.0.5",
    "@storybook/react": "^7.0.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^14.0.0",
    "@types/react": "18.0.35",
    "autoprefixer": "^10.3.3",
    "babel-jest": "^29.5.0",
    "babel-loader": "^9.1.2",
    "eslint": "8.38.0",
    "eslint-config-next": "13.3.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "postcss": "^8.3.6",
    "react-test-renderer": "^18.2.0",
    "tailwindcss": "^3.3.1",
    "typescript": "5.0.4"
  }
}
